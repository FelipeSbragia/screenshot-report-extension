{
  "manifest_version": 3,
  "name": "Screenshot Report Extension",
  "description": "Captura um screenshot da página atual e exibe os metadados em um relatório.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/screenshot-16.png",
    "32": "icons/screenshot-32.png",
    "48": "icons/screenshot-48.png",
    "128": "icons/screenshot-128.png"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/screenshot-16.png",
      "32": "icons/screenshot-32.png",
      "48": "icons/screenshot-48.png",
      "128": "icons/screenshot-128.png"
    }
  }
}
